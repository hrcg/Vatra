/****** Object:  StoredProcedure [dbo].[sqlprAuthenticateUser]    Script Date: 15-May-19 9:28:40 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
create procedure [dbo].[sqlprAuthenticateUser]
@username nvarchar(50),
@password nvarchar(50)
as
begin
	declare @count int
	select @count = COUNT (username) from Perdorues
	where [username]=@username and [password]=@password


	if (@count=1)
	begin
		select 1 as returncode
	end
	else
	begin
		select -1 as returncode
	end
end
GO
